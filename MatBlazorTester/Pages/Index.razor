@page "/"
@using MatBlazor
<h1>Hello, world!</h1>

Welcome to your new app.

<MatBlazor.MatDialog IsOpen="showDialog1" IsOpenChanged="(state) => showDialog1 = state">
    <MatDialogTitle>Dialog 1</MatDialogTitle>
    <MatDialogContent>
        <div class="form-group">
            <div class="col-md-12">
                <MatDatePicker Label="Booking date" @bind-Value="dateTime"></MatDatePicker>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <MatTextField Label="Text 1" @bind-Value="MyText1"></MatTextField>
            </div>
        </div>
        <div class="form-group form-row">
            <div class="col-md-4">
                <MatSelect Label="Select1" Enhanced="true" @bind -Value="MySelect">
                    @foreach (var item in MyList)
                    {
                    <MatOption Value="item">@item</MatOption>
                    }
                </MatSelect>
            </div>
            <div class="col-md-8">
                <MatTextField Label="Text 2" @bind-Value="MyText2"></MatTextField>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button class="btn btn-secondary">Cancel</button>
        </div>
    </MatDialogContent>
</MatBlazor.MatDialog>

<MatBlazor.MatDialog IsOpen="showDialog2" IsOpenChanged="(state) => showDialog2 = state">
    <MatDialogTitle>Dialog 2</MatDialogTitle>
    <MatDialogContent>
        
        <MatDatePicker Label="Booking date" @bind-Value="dateTime"></MatDatePicker>

        @*<div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button class="btn btn-secondary">Cancel</button>
            </div>*@
    </MatDialogContent>
</MatBlazor.MatDialog>

<MatBlazor.MatDialog IsOpen="showDialog3" IsOpenChanged="(state) => showDialog3 = state">
    <MatDialogTitle>Dialog 3</MatDialogTitle>
    <MatDialogContent>
        <div class="form-group">
            <div class="col-md-12">
                <MatDatePicker Label="Booking date" @bind-Value="dateTime"></MatDatePicker>
            </div>
        </div>
    </MatDialogContent>
</MatBlazor.MatDialog>


<button @onclick="() => { showDialog1 = true; }">Show dialog 1</button>
<button @onclick="() => { showDialog2 = true; }">Show dialog 2</button>
<button @onclick="() => { showDialog3 = true; }">Show dialog 3</button>

@code {
    bool showDialog1 { get; set; }
    bool showDialog2 { get; set; }
    bool showDialog3 { get; set; }
    string MyText;
    string MyText1;
    string MyText2;
    string MySelect;
    DateTime? dateTime;
    List<string>
    MyList = new List<string>
        { "Item1", "Item2" };
}
